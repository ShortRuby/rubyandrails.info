<%= form_with(model: @community, class: "text-slate-800") do |f| %>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :title, class: "text-base" %>
    <%= f.text_field :title %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :description, class: "text-base" %>
    <%= f.text_field :description %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :cover, class: "text-base" %>
    <%= f.text_field :cover %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :url, class: "text-base" %>
    <%= f.text_field :url %>
  </div>

  <div class="text-base ">
    <%= f.label :source, class: "mr-10" %>
    <%= f.select :source, Community.sources.keys %>
  </div>


  <div>
    <%= f.submit class: "bg-red-600 text-white px-5 py-3" %>
  </div>

<% end %>
