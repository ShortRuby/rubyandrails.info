<h1 class="font-bold mb-5 font-custom text-5xl">Books about Ruby & Ruby on Rails</h1>
<p class="max-w-xl mb-10 md:mb-20"><%= @books.count %> books about Ruby, Ruby on Rails, and all the technologies related to them.</p>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-4 md:gap-10 xl:gap-16">

  <div class="col-span-3 order-2 lg:order-first grid md:grid-cols-2 xl:grid-cols-3 place-items-stretch gap-4 lg:gap-6">

    <% @books.each do |book| %>
      <%= link_to book, class: "border rounded-sm lg:aspect-video hover:bg-red-50 border-red-200 p-5" do %>
        <h3 class="font-bold font-custom text-red-500 hover:text-red-600 text-xl leading-tight">
          <%= book.title %>
        </h3>
        <span class="font-normal text-lg text-slate-700">
          by <%= book.authors.map(&:name).join(", ") %>
        </span>
      <% end %>
    <% end %>

  </div>

  <div class="text-lg lg:text-base">
    <h3 class="font-bold mb-2 font-custom">I want to learn</h3>
    <span class="flex lg:flex-col flex-wrap gap-x-6 lg:gap-2">
      <%= @tags.map { |t| link_to(t.title, t, class: "text-red-500 hover:text-red-600") }.join(" ").html_safe %>
    </span>
  </div>
</div>

<% if current_user.try(:admin?) %>
  <%= link_to new_book_path, class: "fixed bottom-10 right-10" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 fill-red-500" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" /> </svg>
  <% end %>
<% end %>
