<% if current_user.try(:admin?) %>
  <%= link_to edit_author_path(@author), class: "fixed bottom-10 right-10" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 fill-red-500" viewBox="0 0 20 20" fill="currentColor"> <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" /> </svg>
  <% end %>
<% end %>



<div class="mb-40 px-10 space-y-40">
  <div>
    <!-- breadcrumbs -->
    <div class="flex mb-10 gap-2 text-base items-center">
      <%= link_to "Home", root_path, class: "hover:text-red-600" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 stroke-slate-300" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /> </svg>
      <%= link_to "Peoples", authors_path, class: "hover:text-red-600"  %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 stroke-slate-300" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /> </svg>
      <%= @author.name %>
    </div>

    <!-- author & about book -->
    <section>
      <div class="mb-20">
        <h1 class="text-7xl mb-5 max-w-4xl font-bold"><%= @author.name %></h1>
      </div>
      <div class="grid grid-cols-5 gap-10 lg:gap-20">
        <article class="col-start-3 col-span-3">
          <div class="mb-10">
            <%= @author.content %>
          </div>
          <div class="text-red-500 flex gap-8">
            <% if @author.siteUrl.present? %>
              <%= link_to "Website", @author.siteUrl, target: "_blank" %>
            <% end %>
            <% if @author.twitterUrl.present? %>
              <%= link_to "Twitter", @author.twitterUrl, target: "_blank" %>
            <% end %>
            <% if @author.githubUrl.present? %>
              <%= link_to "Github", @author.githubUrl, target: "_blank" %>
            <% end %>
          </div>
        </article>
      </div>
    </section>
  </div>

  <!-- books from author -->
  <section>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-10 lg:gap-20">
      <div class="md:col-span-2">
        <h2 class="text-5xl max-w-sm font-bold">Books written by <%= @author.name %></h2>
      </div>

      <div class="col-start-3 text-red-500 col-span-3 flex flex-col gap-10">
        <% @books.each do |book| %>
          <%= link_to book, class: "group" do %>
            <h2 class="font-bold group-hover:text-red-600 text-5xl flex gap-5 items-center">
              <%= book.title %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 -translate-x-8 opacity-0 group-hover:opacity-100 group-hover:transition-all group-hover:duration-300 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"> <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /> </svg>
            </h2>
          <% end %>
        <% end %>
      </div>

      <div class="md:col-start-3 md:col-span-3">
        <%= link_to books_path, class: "hover:text-red-600 flex gap-2 items-center" do %>
          Explore all books
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /> </svg>
        <% end %>
      </div>

    </div>
  </section>

  <!-- author writes about -->
  <section class="">
    <div class="grid grid-cols-5 gap-10 lg:gap-20">
      <div class="col-span-2">
        <h2 class="text-4xl font-bold"><%= @author.name %> writes about</h2>
      </div>

      <div class="col-span-3 grid lg:grid-cols-2 gap-8 md:gap-10">
        <% @books.each do |book| %>
          <% book.tags.each do |tag| %>
            <%= link_to tag.title, tag %>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
</div>
