  <%= link_to book, class: "group relative" do %>
      <% if book.free %>
        <span class="text-sm z-40 group-hover:-translate-y-4 duration-300 transition-transform bg-green-500 absolute top-0 left-0 font-bold self-start text-white px-2 w-auto inlin-block py-1">Free </span>
      <% end %>

      <%= render BookCoverComponent.new(book: book) %> 

      <h3 class="text-red-500 hover:text-red-600 text-2xl leading-tight">
        <%= book.title %>
      </h3>

      <span class="font-normal text-lg text-slate-700">
        by <%= book.authors.map(&:name).join(", ") %>
      </span>

<% end %>

