<% content_for :related do %>
  <div class="space-y-20">
    <% unless @books.empty? %>
      <div>
        <h3 class="px-5 mb-4 sm:px-10 xl:px-0 h2">Books</h3>
        <div class="grid gap-8 p-5 md:p-10 xl:p-12 sm:grid-cols-2 text-slate-700 bg-white/80 rounded-3xl ">
          <%= render partial: "books/card_compact", collection: @books, as: :book %>
        </div>
      </div>
    <% end %>
    <% unless @courses.empty? %>
      <div>
        <h3 class="px-5 mb-4 sm:px-10 xl:px-0 h2">Courses</h3>
        <div class="grid gap-8 p-5 md:p-10 xl:p-12 sm:grid-cols-2 bg-white/80 rounded-3xl text-slate-700 ">
          <%= render partial: "courses/card", collection: @courses, as: :course %>
        </div>
      </div>
    <% end %>
    <% unless @newsletters.empty? %>
      <div>
        <h3 class="px-5 mb-4 sm:px-10 xl:px-0 h2">Newsletters</h3>
        <div class="grid gap-8 p-5 md:p-10 xl:p-12 sm:grid-cols-2 bg-white/80 rounded-3xl text-slate-700 ">
          <%= render partial: "newsletters/card", collection: @newsletters, as: :newsletter %>
        </div>
      </div>
    <% end %>
    <% unless @screencasts.empty? %>
      <div>
        <h3 class="px-5 mb-4 sm:px-10 xl:px-0 h2">Screencasts</h3>
        <div class="grid gap-8 p-5 md:p-10 xl:p-12 sm:grid-cols-2 bg-white/80 rounded-3xl text-slate-700 ">
          <%= render partial: "screencasts/card", collection: @screencasts, as: :screencast  %>
        </div>
      </div>
    <% end %>
    <% unless @podcasts.empty? %>
      <div>
        <h3 class="px-5 mb-4 sm:px-10 xl:px-0 h2">Podcasts</h3>
        <div class="grid gap-8 p-5 md:p-10 xl:p-12 sm:grid-cols-2 bg-white/80 rounded-3xl text-slate-700 ">
          <%= render partial: "podcasts/card", collection: @podcasts, as: :podcast %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<% if current_user.try(:admin?) %>
  <div class="flex self-end">
    <%= link_to 'Edit', edit_author_path(@author), class: "p-3 bg-sky-500" %>
    <%= button_to 'Ã—', author_path(@author), method: :delete, class: "px-5 py-3", style: 'background: tomato' %>
  </div>
<% end %>
