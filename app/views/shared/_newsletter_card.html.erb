<div class="flex flex-col justify-between shadow-md hover:-translate-y-4 duration-300 transition-all hover:shadow-xl shadow-teal-800/30 hover:shadow-teal-800/20 bg-teal-600 text-white lg:aspect-video rounded-xl p-10 gap-4 md:gap-2">
  <div class="">
    <%= link_to newsletter do %>
      <h3 class="font-custom hover:opacity-90 font-bold text-3xl xl:text-4xl xl:leading-tight">
        <%= newsletter.title %>
      </h3>
    <% end %>
    <div class="opacity-60 mb-8">by <%= newsletter.author %></div>
    <div class="mb-4"><%= newsletter.content %></div>
  </div>

  <div>
    <%= link_to "Details", newsletter,  class: "rounded-md shadow-lg shadow-slate-600/10 px-6 hover:bg-slate-700 py-2 inline-block bg-slate-800 text-white text-base lg:text-xl font-custom" %>
  </div>
</div>
