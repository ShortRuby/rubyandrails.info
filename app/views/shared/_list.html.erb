<section class="pt-16 lg:pt-20">
  <div class="grid grid-cols-1 lg:grid-cols-5 gap-4 lg:gap-20">
    <div class="lg:col-span-2">
      <h2 class="lg:text-5xl lg:pt-10 lg:max-w-sm font-bold">
        <%= yield %>
      </h2>
    </div>

    <div class="lg:col-start-3 lg:col-span-3 text-red-500 divide-y divide-red-700/10  flex flex-col">
      <% obj.each do |item| %>
        <%= link_to item, class: "group py-8 lg:py-8" do %>
          <h2 class="font-bold group-hover:text-red-600 lg:text-4xl flex-inline gap-5 items-center">
          <% if local_assigns[:people] %>
            <%= item.name %>
          <% else %>
            <%= item.title %>
          <% end %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 lg:h-8 lg:w-8 inline-block -translate-x-8 opacity-0 group-hover:opacity-100 group-hover:transition-all group-hover:duration-300 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"> <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /> </svg>
          </h2>
        <% end %>
      <% end %>
    </div>

    <div class="lg:col-start-3 pb-20 lg:col-span-3">
      <%= link_to link, class: "hover:text-red-600 flex gap-2 items-center" do %>
        <%= title %> 
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /> </svg>
      <% end %>
    </div>
  </div>
</section>
