<% unless @book.cover.nil? || @book.cover.empty? %>

  <div class="relative">
    <% if @book.free %>
      <span class="text-base bg-green-500/80 absolute font-bold text-white px-2 inline-block py-1">Free </span>
    <% end %>
    <%= image_tag("books/#{@book.cover}", alt: "#{@book.title}", class: "shrink-0 lg:mr-auto rounded-sm block shadow-xl shadow-slate-800/20 ") %>
  </div>

<% end %>

