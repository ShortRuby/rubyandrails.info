<h1 class="font-bold font-custom max-w-xl mb-20">
  <span class="mb-2 inline-block">Books about</span>
  <div class="text-5xl ">
    <%= @tag.title.capitalize() %>
  </div>
</h1>

<div class="grid grid-cols-2 gap-10">
  <% @book.each do |book| %>
      <%= link_to book, class: "bg-white flex flex-col gap-5 relative hover:scale-110 hover:transition-all hover:duration-300 p-8 font-bold rounded-2xl text-red-600 font-custom text-2xl" do %>
          <div class="inline-block text-stone-600 font-normal text-base">
        <% book.authors.each do |author| %>
            <%= author.name %>
        <% end %>
          </div>

        <div class="">
          <%=  book.title %>
        </div>
      <% end %>
  <% end %>
</div>

<div class="fixed bottom-10 right-10 flex gap-10">
  <% if current_user.try(:admin?) %>
    <%= button_to @tag, method: :delete do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 fill-red-500" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" /> </svg>
    <% end %>
    <%= link_to edit_tag_path(@tag) do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 fill-red-500" viewBox="0 0 20 20" fill="currentColor"> <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" /> </svg>
    <% end %>
  <% end %>
</div>
