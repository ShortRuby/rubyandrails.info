<% content_for :hero do %>
  <%= render "shared/btn_back", path: podcasts_path %>

    <div class="flex-1 self-stretch flex items-center grow justify-center flex-col h-full">
      <% unless @podcast.cover.empty? %>
        <div class="shrink-0 rounded-sm relative ">
          <%= image_tag("/podcasts/#{@podcast.cover}", alt: "#{@podcast.title}", class: "shadow-lg shadow-slate-800/10 block mx-auto w-2/3") %>
        </div>
      <% end %>
      <h1 class="h1 max-w-4xl mx-auto my-6">
        <%= @podcast.title %>
      </h1>

      <%= render "shared/btn_cta", btn: @podcast.url, event: "go to podcast", title: "Listen Podcast" %>
    </div>

<% end %>

<% content_for :content do %>
      <div class="mb-4"><%= @podcast.content %></div>
<% end %>

<% content_for :authors do %>
  <%= render partial: "shared/author_second",  collection: @podcast.authors, as: :author %>
<% end %>

<% content_for :related do %>
  <div class="p-5 md:p-10 xl:p-16 grid sm:grid-cols-2 gap-8 text-slate-700 bg-white rounded-3xl ">
  <%= render partial: "podcasts/card", collection: @related, as: :podcast %>
  </div>
<% end %>
