<%= form_with(model: @newsletter, class: "text-slate-800") do |f| %>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :title, class: "text-base" %>
    <%= f.text_field :title %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :author, class: "text-base" %>
    <%= f.text_field :author %>
  </div>

 <div class="flex flex-col gap-1 mb-r">
    <%= f.label :content, class: "text-base" %>
    <%= f.rich_text_area :content %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :url, class: "text-base" %>
    <%= f.text_field :url %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :featured_cover, class: "text-base" %>
    <%= f.text_field :featured_cover %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :testimonial_text, class: "text-base" %>
    <%= f.text_field :testimonial_text %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :testimonial_author, class: "text-base" %>
    <%= f.text_field :testimonial_author %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :testimonial_link, class: "text-base" %>
    <%= f.text_field :testimonial_link %>
  </div>

  <div class="flex items-center mb-5 gap-2 mb-4">
    <%= f.check_box :featured %>
    <%= f.label "Featured", class: "text-base"  %>
  </div>

  <div>
    <%= f.submit class: "bg-red-600 text-white px-5 py-3" %>
  </div>

<% end %>
