<div class="mb-20">

  <%= render "shared/btn_random", title: "Topic" %>

  <%= render "shared/suggestions_books" %>

  <div class="bg-white rounded-2xl  sm:mr-5 lg:mr-0 p-5 sm:p-8 md:p-12  border border-slate-200">
    <%= render "shared/page_title", title: "#{ Tag.count } Topics for learning", description: "Choose a topic, and we'll suggest books where you can learn more about it" %>

    <div class="grid lg:grid-cols-2 gap-6 sm:gap-6">

      <% @tags.each do |tag| %>
        <%= link_to tag, class: "" do %>
          <h2 class="font-bold font-custom text-red-500 hover:text-red-600 text-xl leading-tight">
            <%= tag.title %>
          </h2>
        <% end %>
      <% end %>
    </div>
  </div>

</div>


<div class="fixed bottom-10 right-10 flex gap-10">
  <% if current_user.try(:admin?) %>
    <%= link_to new_tag_path  do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 fill-red-500" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" /> </svg>
    <% end %> 
  <% end %>
</div>

