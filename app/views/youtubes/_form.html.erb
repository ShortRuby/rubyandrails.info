<%= form_with(model: @youtube, class: "text-stone-800") do |f| %>

  <div class="flex flex-col gap-1 mb-4">
    <%= f.label :title, class: "text-base" %>
    <%= f.text_field :title %>
  </div>

  <div class="flex flex-col gap-1 mb-4">
    <%= f.label :cover, class: "text-base" %>
    <%= f.text_field :cover %>
  </div>

  <div class="flex flex-col gap-1 mb-4">
    <%= f.label :description, class: "text-base" %>
    <%= f.text_field :description %>
  </div>

  <div class="flex flex-col gap-1 mb-4">
    <%= f.label :url, class: "text-base" %>
    <%= f.text_field :url %>
  </div>

  <div data-controller="tom-select">
    <%= f.select :tag_ids, Tag.all.pluck(:title, :id), {}, { multiple: true, id: "select-tags" } %>
  </div>

  <div class="text-base mb-5">
    <%= f.label :author, class: "mr-10" %>
    <div class="grid grid-cols-3 mb-5 gap-1">
      <%= f.collection_check_boxes :author_ids, Author.all, :id, :name do |c| %>
        <div class="flex items-center gap-2">
          <%= c.check_box %>
          <%= c.label %>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <%= f.submit class: "bg-red-600 text-white px-5 py-3" %>
  </div>

<% end %>
