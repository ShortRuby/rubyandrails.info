<div class="flex xl:gap-20">

  <div class="mx-auto xl:w-4/5 px-5 sm:p-10">

    <div class="flex flex-col items-center md:items-start text-center md:text-left md:flex-row gap-5 md:gap-10 lg:gap-20 mb-10">
      <div class="w-1/2 md:w-1/3">
        <h1 class="text-3xl lg:text-5xl mb-1 font-medium">
          <%= @newsletter.title %>
        </h1> 
        by <%= @newsletter.author %>
      </div>

      <div class="md:w-2/3">
        
        <%= link_to "All newsletters", newsletters_path, class: "mb-4 md:inline-block hover:text-red-500 hidden" %>

        <div class="max-w-2xl text-2xl mb-10">
          <%= @newsletter.content %>
        </div>
        <%= render ButtonComponent.new(title: "Subscribe", path: @newsletter.url, shop: true) %>
      </div>

    </div>
    <div class=""> 
      <h2 class="text-3xl mb-8">More newsletters</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 items-start xl:grid-cols-3 gap-4 md:gap-10 xl:gap-16">
        <%= render (NewsletterCardComponent.with_collection(@more_newsletters)) %>
      </div>
    </div>
  </div>

  <div class="hidden xl:block w-1/5 py-10 px-8">
    <div class="flex flex-col max-w-xs gap-8">
      <h2 class="text-3xl mb-8">Topics</h2>
      <div class="flex flex-wrap gap-2">
        <%= @tags.map { |t| link_to(t.title, t, class: "bg-slate-100 px-3 py-1 hover:bg-slate-50 inline-block hover:text-red-500") }.join(" ").html_safe %>
      </div>
    </div>
  </div>
</div>

<% if current_user.try(:admin?) %>
  <div class="fixed bottom-10 right-10 flex gap-10">
    <%= link_to 'Edit', edit_newsletter_path(@newsletter) %>
    <%= button_to 'Delete', @newsletter, method: :delete, style: 'background: tomato' %>
  </div>
<% end %>
