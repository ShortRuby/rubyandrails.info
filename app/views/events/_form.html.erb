<%= form_with(model: @event, class: "text-slate-800") do |f| %>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :title, class: "text-base" %>
    <%= f.text_field :title %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :description, class: "text-base" %>
    <%= f.text_field :description %>
  </div>

 <div class="flex flex-col gap-1 mb-r">
    <%= f.label :date, class: "text-base" %>
    <%= f.text_field :date %>
  </div>

  <div class="flex flex-col gap-1 mb-r">
    <%= f.label :url, class: "text-base" %>
    <%= f.text_field :url %>
  </div>

  <div class="flex items-center mb-5 gap-2 mb-4">
    <%= f.check_box :active %>
    <%= f.label "Active", class: "text-base"  %>
  </div>

  <div>
    <%= f.submit class: "bg-red-600 text-white px-5 py-3" %>
  </div>

<% end %>
