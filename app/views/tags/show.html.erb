<div class="px-10 grid lg:grid-cols-5 gap-20 ">
  <div class="col-span-2">
    <!-- breadcrumbs -->
    <div class="flex mb-10 gap-2 text-base items-center">
      <%= link_to "Home", root_path, class: "hover:text-red-600" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 stroke-slate-300" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /> </svg>
      <%= link_to "All Themes", tags_path, class: "hover:text-red-600"  %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 stroke-slate-300" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /> </svg>
      <%= @tag.title %>
    </div>

    <h1 class="font-bold font-custom text-8xl max-w-xl mb-20">Books about <span class="text-red-500"><%= @tag.title.capitalize() %></span></h1>
  </div>

  <div class="col-span-3 flex flex-col gap-20">
    <% @books.each do |book| %>
      <%= link_to book, class: "flex gap-4 group flex-col" do %>
        <h3 class="font-bold group-hover:text-red-600 text-5xl flex gap-5 items-center">
          <%= book.title %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 -translate-x-8 opacity-0 group-hover:opacity-100 group-hover:transition-all group-hover:duration-300 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"> <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" /> </svg>
        </h3>
        <span class="font-normal opacity-70">
          by
          <%= book.authors.map(&:name).join(", ") %>

        </span>
      <% end %>

    <% end %>
  </div>
</div>

