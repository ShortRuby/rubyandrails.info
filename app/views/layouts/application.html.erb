  <aside class="px-5">  
    <%= render "shared/navbar" %>
  </aside>  

  <main class="max-w-3xl xl:max-w-4xl overflow-hidden mx-auto">  
    <%= link_to "/pages/heroku-alternatives", class:"my-6 py-2 px-5 lg:px-0 text-red-500 text-base font-custom inline-block" do %>
