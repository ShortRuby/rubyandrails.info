<div class="flex flex-col justify-between bg-violet-600 text-white rounded-xl p-10 gap-4 md:gap-2">
  <div class="">
    <%= link_to screencast do %>
      <h3 class="font-custom hover:opacity-90 font-bold text-3xl xl:text-4xl xl:leading-tight">
        <%= screencast.title %>
      </h3>
    <% end %>
    <div class="opacity-60 mb-4">
      by <%= screencast.authors.map { |author| link_to(author.name, author, class: "hover:opacity-80") }.join(", ").html_safe %>
</div>
    <div class="mb-4"><%= screencast.content %></div>
  </div>

  <div>
    <%= link_to "Go To Screencast",  screencast.url, target:"_blank", data: {:"splitbee-event" => "go to screencast"}, class: "rounded-md shadow-lg shadow-slate-600/10 px-6 hover:bg-slate-700 py-2 inline-block bg-slate-800 text-white text-base lg:text-xl font-custom" %>
  </div>
</div>
