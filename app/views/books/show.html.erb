<div class="flex xl:gap-20">

  <div class="mx-auto xl:w-4/5 px-5 sm:p-10">

    <div class="flex flex-col items-center md:items-start text-center md:text-left md:flex-row gap-5 md:gap-10 lg:gap-20 mb-10">

      <div class="w-1/2 md:w-1/3">
        <%= render BookCoverComponent.new(book: @book) %> 
      </div>
      
      <div class="md:w-2/3">

        <%= link_to "All Books", books_path, class: "mb-4 md:inline-block hover:text-red-500 hidden" %>

        <h1 class="text-3xl lg:text-5xl mb-1 font-medium">
          <%= @book.title %>
        </h1> 

        <div class="mb-8">
          by <%= @book.authors.map { |author| link_to(author.name, author, class: "text-slate-500 hover:text-red-500") }.join(", ").html_safe %>
        </div>

        <div class="flex flex-wrap gap-2 mb-16 justify-center md:justify-start">
          <% if @book.getBookOnAmazonUrl.present? %>
            <%= render ButtonComponent.new(title: "Amazon", path: @book.getBookOnAmazonUrl, shop: true) %>
          <% end %>
          <% if @book.getBookOnSiteUrl.present? %>
            <%= render ButtonComponent.new(title: @book.getBookOnSiteTitle, path: @book.getBookOnSiteUrl, shop: true) %>
          <% end %>
        </div>

        <div class="text-left">
          <h2 class="text-3xl mb-4">About book</h2>

          <div class="flex mb-4 flex-wrap gap-2">
            <% @book.tags.each do |item| %>
              <div class="bg-slate-100 px-3 py-1 hover:bg-slate-50">
                <%= link_to item, class: "hover:text-red-500" do %>
                  <%= item.title %>
                <% end %>
              </div>
            <% end %>
          </div>

          <div class="max-w-2xl mb-10">
            <%= @book.content %>
          </div>
        </div>
      </div>
    </div>

    <div class="xl:hidden lg:w-2/3"> 
      <h2 class="text-3xl mb-8">More books</h2>
      <div class="flex flex-col md:flex-row gap-4 md:gap-12">
        <%= render (BookCardComponent.with_collection(@more_books)) %>
      </div>
    </div>

  </div>

  <div class="hidden xl:block w-1/5 py-10 px-8">
    <h2 class="text-3xl mb-8">More books</h2>
    <div class="flex flex-col max-w-xs gap-8">
      <%= render (BookCardComponent.with_collection(@more_books)) %>
    </div>
  </div>

</div>

<% if current_user.try(:admin?) %>
  <div class="fixed bottom-10 z-50 right-10 flex gap-10">
    <%= link_to 'Edit', edit_book_path(@book) %>
    <%= button_to 'Delete', @book, method: :delete, style: 'background: tomato' %>
  </div>
<% end %>

