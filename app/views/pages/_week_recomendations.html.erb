<section class="text-white xl:-mt-10 bg-gradient-to-b from-blue-800 via-emerald-600 to-yellow-500 p-5 sm:p-10 md:p-12 2xl:px-20 mb-20 2xl:pt-10 2xl:pb-20 relative overflow-hidden">

  <div class="absolute inset-0">
    <%= image_tag("bg-main.png", srcset: { "bg-main@2x.png" => "2x"}, class: "w-full opacity-40") %>
  </div>
  
  <div class="relative mb-20">
    <p class="font-medium inline-block xl:font-light xl:col-span-5 relative xl:leading-tight inline-block mb-4">
      <span class="font-medium text-3xl xl:text-4xl">This week recomendations </span>
      <br/>about Ruby & Ruby on Rails
    </p>
  </div>

  <div class="grid lg:grid-cols-3 relative gap-8 lg:gap-12 2xl:gap-16">
    <div class="lg:col-span-2">
      <div class="flex flex-col gap-4 items-start sm:flex-row sm:gap-8 xl:pr-10 xl:border-r xl:border-white/20 2xl:pr-16">
        <% @featured_book.each do |book| %>

        <%= link_to book_path(book), class: "w-full" do %>
          <%= render BookCoverComponent.new(book: book) %> 
        <% end %>

        <div class="flex flex-col md:gap-4">
          <%= link_to "book", books_path, class: "uppercase text-sm inline-block font-bold" %>
          <div>
            <%= link_to book_path(book), class: "font-medium mb-2 hover:opacity-80 lg:text-2xl xl:text-3xl xl:font-light xl:leading-tight 2xl:text-5xl " do %>
              <%= book.title %>
            <% end %>
          </div>
          </div>
        <% end %>

      </div>
    </div>

    <div class="flex flex-col gap-8 sm:grid sm:grid-cols-2 sm:gap-8 lg:flex lg:flex-col lg:gap-16">

      <div class="flex gap-2 flex-col lg:gap-4">
        <% @featured_podcast.each do |podcast| %>
          <%= link_to "podcast", podcasts_path, class: "uppercase text-sm inline-block font-bold" %>
          <div>
            <%= link_to podcast_path(podcast), class: "font-medium mb-2 hover:opacity-80 lg:text-2xl xl:text-3xl xl:font-light xl:leading-tight 2xl:text-4xl " do %>
              <%= image_tag("podcasts/#{podcast.cover}", alt: "#{podcast.title}", class: "shrink md:w-full xl:w-1/3 mb-4 shadow-xl z-50 shadow-amber-800/30 ") %>
              <%= podcast.title %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="flex gap-2 flex-col lg:gap-4">
        <% @featured_newsletter.each do |newsletter| %>
          <%= link_to "Newsletter", newsletters_path, class: "uppercase text-sm inline-block font-bold" %>
          <div>
            <%= link_to newsletter_path(newsletter), class: "font-medium mb-2 hover:opacity-80 lg:text-2xl xl:text-3xl xl:font-light xl:leading-tight 2xl:text-4xl " do %>
              <%= newsletter.title %>
              <p class="text-lg">by <%= newsletter.author %></p>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</section>

