<%= link_to local_assigns[:link], target: "_blank", class: "" do %>
    <div>
      <h3 class="font-medium font-custom text-green-500 hover:text-green-600 text-2xl leading-tight">
        <%= title %>
      </h3>
      <p class="font-normal mb-4 text-lg"> 
        by <%= authors.map { |author| link_to(author.name, author, class: "hover:text-red-500") }.join(", ").html_safe %>
      </p>
      <p class="text-base"><%= description %></p>
    </div>
  <% end %>

