<div class="space-y-12 md:space-y-28">
  <%= render(Layout::HeroComponent.new(title: "newsletters", bg_color: "bg-emerald-600", bg: "newsletter", second: true, path: newsletters_path)) do |c| %>

    <%= c.with_image do %>
      <div>
        <div class="mb-8 xl:text-3xl">
          <%= @newsletter.content %>
        </div>

        <div class="flex flex-wrap gap-2 mb-8 lg:mb-0 items-start justify-start ">
          <%= render ButtonComponent.new(title: "Subscribe", path: @newsletter.url, shop: true) %>
        </div>
      </div>
    <% end %>

    <%= c.with_link do %>

      <div class="lg:self-start lg:h-[35vh]">
        <h1 class="text-3xl md:leading-tight md:text-4xl 2xl:text-5xl font-bold md:mb-4">
          <%= @newsletter.title %>
        </h1> 
        <div class="mb-8 xl:text-3xl">
          by <%= @newsletter.author %>
        </div>
      </div>

    <% end %>
  <% end %>

  <div class="px-5 md:px-10 lg:px-16">
    <h2 class="font-bold text-3xl mb-8 md:text-5xl">More newsletters</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-10">
      <%= render (NewsletterCardComponent.with_collection(@more_newsletters)) %>
    </div>
  </div>
</div>


<% if current_user.try(:admin?) %>
  <div class="fixed bottom-10 right-10 flex gap-10">
    <%= link_to 'Edit', edit_newsletter_path(@newsletter) %>
    <%= button_to 'Delete', @newsletter, method: :delete, style: 'background: tomato' %>
  </div>
<% end %>
