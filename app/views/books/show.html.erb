<% if current_user.try(:admin?) %>
  <div class="fixed bottom-10 right-10 flex gap-10">
    <%= link_to 'Edit', edit_book_path(@book) %>
    <%= button_to 'Delete', @book, method: :delete, style: 'background: tomato' %>
  </div>
<% end %>

<div class="px-10 space-y-40">
  <div>
    <!-- breadcrumbs -->
    <div class="flex mb-10 gap-2 text-base items-center">
      <%= link_to "Home", root_path, class: "hover:text-red-600" %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 stroke-slate-300" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /> </svg>
      <%= link_to "Books", books_path, class: "hover:text-red-600"  %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 stroke-slate-300" viewBox="0 0 20 20" fill="currentColor"> <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /> </svg>
      <%= @book.title %>
    </div>

    <!-- author & about book -->
    <section class="mb-20">
      <div class="mb-20">
        <h1 class="text-7xl mb-5 max-w-4xl font-bold"><%= @book.title %></h1>
        <%= @book.authors.map { |author| link_to(author.name, author, class: "hover:text-red-500") }.join(", ").html_safe %>
      </div>
      <div class="grid grid-cols-5 gap-10 lg:gap-20">
        <article class="col-start-3 col-span-3">
          <%= @book.content %>
        </article>
      </div>
    </section>

  <!-- books from author -->
  <section>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-10 lg:gap-20">
      <div class="md:col-span-3 md:col-start-3 grid lg:grid-cols-2 gap-8 md:gap-10">
        <% if @book.getBookOnAmazonUrl.present? %>
          <%= link_to @book, class: "p-8 flex justify-center items-center flex-col font-bold group bg-slate-700 hover:bg-red-600 text-white" do %>
            <span class="block self-start font-normal text-base">
              Get it on
            </span>
            <div class="flex text-3xl self-start gap-4 items-center">
              <span class="group-hover:translate-x-8 transition-all duration-300">
                Amazon
              </span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 shrink-0 w-6 opacity-0 group-hover:opacity-100 -translate-x-20 group-hover:translate-x-4 transition-all duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"> <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /> </svg>
            </div>
          <% end %>
        <% end %>

        <% if @book.getBookOnSiteUrl.present? %>
          <%= link_to @book.getBookOnSiteUrl, class: "p-8 flex justify-center items-center flex-col font-bold group bg-slate-700 hover:bg-red-600 text-white" do %>
            <span class="block self-start font-normal text-base">
              Get it on
            </span>
            <div class="flex text-3xl self-start gap-4 items-center">
              <span class="group-hover:translate-x-8 transition-all duration-300">
                <%= @book.getBookOnSiteTitle %>
              </span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 shrink-0 w-6 opacity-0 group-hover:opacity-100 -translate-x-20 group-hover:translate-x-4 transition-all duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"> <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /> </svg>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
  </div>

  <!-- what you'll learn -->
  <section class="grid grid-cols-5 gap-10 lg:gap-20">
    <div class="col-span-2">
      <h1 class="text-5xl mb-5 max-w-4xl font-bold">What you'll learn</h1>
    </div>
    <div class="col-start-3 text-red-500 col-span-3 flex flex-col gap-10">
      <% @book.tags.each do |tag| %>
        <%= link_to tag, class: "group" do %>
          <h2 class="font-bold group-hover:text-red-600 text-5xl flex gap-5 items-center">
            <%= tag.title %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 -translate-x-8 opacity-0 group-hover:opacity-100 group-hover:transition-all group-hover:duration-300 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"> <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /> </svg>
          </h2>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- books from author -->
  <section class="grid grid-cols-5 gap-10 lg:gap-20">
    <div class="col-span-2">
      <h1 class="text-5xl mb-5 max-w-4xl font-bold">
        <%= "Author".pluralize(@book.authors.count) %> 
      </h1>
    </div>
    <div class="col-start-3 text-red-500 col-span-3 flex flex-col gap-10">
      <% @book.authors.each do |author| %>
        <%= link_to author, class: "group" do %>
          <h2 class="font-bold group-hover:text-red-600 text-5xl flex gap-5 items-center">
            <%= author.name %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 -translate-x-8 opacity-0 group-hover:opacity-100 group-hover:transition-all group-hover:duration-300 group-hover:translate-x-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"> <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /> </svg>
          </h2>
        <% end %>
      <% end %>
    </div>
  </section>
</div>

<div class="space-y-20 mb-40">
  <%#= render "learn" %>
  <%#= render "author" %>
</div>
