<%= form_with(model: [@youtube, @lesson], class: "text-stone-800") do |f| %>

  <div class="flex flex-col gap-1 mb-4">
    <%= f.label :title, class: "text-base" %>
    <%= f.text_field :title %>
  </div>

  <div class="flex flex-col gap-1 mb-4">
    <%= f.label :description, class: "text-base" %>
    <%= f.rich_text_area :description %>
  </div>

  <div class="flex flex-col gap-1 mb-4">
    <%= f.label :url, class: "text-base" %>
    <%= f.text_field :url %>
  </div>

  <div>
    <%= f.submit class: "bg-red-600 text-white px-5 py-3" %>
  </div>

<% end %>
